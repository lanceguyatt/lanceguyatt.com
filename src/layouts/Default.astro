---
import { type SiteProps, SITE } from '@/config'
import { BaseHead, SchemaWebPage } from '@/components/index.astro'
import '@/styles/workbench.css'

type Props = SiteProps & {
  class?: string
  theme?: string
}

const {
  title,
  name,
  description,
  url,
  image,
  theme,
  class: className
} = Astro.props
const meta = { name, title, description, url, image }
---

<html lang={SITE.lang}>
  <head>
    <BaseHead {...meta}>
      <slot name="head" />
    </BaseHead>
  </head>
  <body class:list={['bg-background', 'text-foreground', className, theme]}>
    <slot name="header" />
    <slot />
    <slot name="footer" />
    <SchemaWebPage {...meta} />
  </body>
</html>
