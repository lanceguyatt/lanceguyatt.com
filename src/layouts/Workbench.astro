---
import { SITE } from '~/config'

// import '@unocss/reset/tailwind.css'
import '~/styles/workbench.css'

import {
  BaseHead,
  Disk,
  Drive,
  Nav,
  // Prose,
  TitleBar,
  Window
} from '~/components/index.astro'

// import Home from '../content/page/home.mdx'

export interface IWorkbench {
  title?: string
  name: string
  description?: string
  url: string
  image?: {
    url?: string
    width?: number
    height?: number
    alt?: string
  }
}

const { lang, copyrightYear } = SITE
const { title, name, description, url, image, ...attrs } =
  Astro.props as IWorkbench
const meta = { title, name, description, url, image }
---

<html lang={lang}>
  <BaseHead {...meta} />
  <body class="bg-gray text-black">
    <div class="grid grid-rows-[auto_1fr] min-h-screen w-full" {...attrs}>
      <TitleBar class="bg-black text-gray" role="banner">
        {SITE.title} Copyright &copy; 2000-{copyrightYear} All Rights Reserved
      </TitleBar>
      <main>
        <slot />
      </main>
      <Window id="workbench-window" name="Workbench" url="/kickstart">
        <!-- <Prose class="p-6">
          <Home components={{ ul: Nav }} />
        </Prose> -->
        <Nav id="workbench-nav" name="Workbench" vertical>
          <Disk name="Ram Disk" url="/ram-disk" />
          <Drive name="Work" url="/work" />
          <Drive name="About" url="/about" />
        </Nav>
      </Window>
    </div>
  </body>
</html>
