---
import { SITE } from '~/config'

import '~/styles/workbench.css'

import {
  BaseHead,
  Disk,
  Drive,
  Nav,
  Prose,
  TitleBar,
  Window,
} from '~/components/index.astro'

import Home from '../content/page/home.mdx'

export interface WorkbenchProps {
  title: string
  description: string
  url: string
  image: {
    url: string
    width: string
    height: string
    alt: string
  }
}

const { lang, copyrightYear } = SITE
const { title, description, url, image, ...attrs } =
  Astro.props as WorkbenchProps
const meta = { title, description, url, image }
---

<html lang={lang}>
  <BaseHead {...meta} />
  <body class="bg-gray text-black">
    <div class="grid min-h-screen w-full grid-rows-[auto,1fr]" {...attrs}>
      <TitleBar class="bg-black text-gray">
        {SITE.title} Copyright &copy; 2000-{copyrightYear} All Rights Reserved
      </TitleBar>
      <slot />
      <Window id="workbench-window" name="Workbench" url="/kickstart">
        <Prose class="p-6">
          <Home components={{ ul: Nav }} />
        </Prose>
        <Nav id="workbench-nav" name="Workbench" vertical>
          <Disk name="Ram Disk" url="/ram-disk" />
          <Drive name="Work" url="/work" />
          <Drive name="About" url="/about" />
        </Nav>
      </Window>
    </div>
  </body>
</html>
