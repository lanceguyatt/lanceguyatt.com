---
import { SEO } from 'astro-seo'
import { getEntryBySlug } from 'astro:content'

import Default from '~/layouts/Default.astro'
import FloppyDisk from '~/components/FloppyDisk.astro'
import FloppyDrive from '~/components/FloppyDrive.astro'
import Prose from '~/components/Prose.astro'

const kickstart = await getEntryBySlug('page', 'kickstart')
const { Content } = await kickstart.render()

const { slug: url, data } = kickstart
const { name, description } = data
---

<Default
  title={name}
  name={name}
  description={description}
  url={`/${url}`}
  theme="kickstart"
>
  <SEO
    slot="head"
    extend={{ meta: [{ name: 'theme-color', content: 'rgb(68, 16, 68)' }] }}
  />
  <div
    class="flex min-h-screen flex-col items-center justify-center gap-6 p-6 md:flex-row md:items-end md:justify-between md:gap-12 md:p-12"
  >
    <Prose class="max-w-44">
      <Content />
    </Prose>

    <a class="relative block h-169 w-39" href="/">
      <span class="sr-only">Return to Workbench</span>
      <FloppyDrive />
      <FloppyDisk
        class="absolute bottom-0 left-3 animate-insert-disk repeat-infinite"
      />
    </a>
  </div>
</Default>
