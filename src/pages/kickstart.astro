---
import { SEO } from 'astro-seo'
import { getEntryBySlug } from 'astro:content'
import Icon from 'astro-icon'

import Default from '~/layouts/Default.astro'
import { Prose } from '~/components/index.astro'

const kickstart = await getEntryBySlug('page', 'kickstart')
const { Content } = await kickstart.render()

const { slug: url, data } = kickstart
const { name, description } = data
---

<Default
  title={name}
  {name}
  description={description}
  url={`/${url}`}
  theme="kickstart"
>
  <SEO
    slot="head"
    extend={{ meta: [{ name: 'theme-color', content: 'rgb(68, 16, 68)' }] }}
  />
  <div
    class="flex flex-col p-6 justify-center items-center gap-6 min-h-screen md:flex-row md:items-end md:justify-between md:gap-12 md:p-12"
  >
    <div class="w-44 flex flex-col gap-6">
      <Prose>
        <Content />
      </Prose>
    </div>

    <a class="relative block h-[10.5625rem] w-39" href="/">
      <span class="sr-only">Return to Workbench</span>
      <Icon name="floppy-drive" />
      <Icon
        name="floppy-disk"
        class="absolute bottom-0 left-2 animate-insert-disk repeat-infinite"
      />
    </a>
  </div>
</Default>
