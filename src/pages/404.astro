---
import { SEO } from 'astro-seo'
import { getEntryBySlug } from 'astro:content'

import Default from '@/layouts/Default.astro'
import Toasty from '@/components/Toasty.astro'

const page = await getEntryBySlug('page', '404')
const { Content } = await page.render()
const { slug: url, data } = page
const { name, description } = data
---

<Default
  title={name}
  description={description}
  url={`/${url}`}
  theme="grey"
  class="grid min-h-screen w-full items-center justify-center"
>
  <SEO
    slot="head"
    extend={{ meta: [{ name: 'theme-color', content: '#000000' }] }}
  />

  <Toasty>
    <Content />
  </Toasty>
</Default>
