---
import { getEntryBySlug } from 'astro:content'

import Default from '~/layouts/Default.astro'
import Toasty from '~/components/Toasty.svelte'

const page = await getEntryBySlug('page', '404')
const { Content } = await page.render()

const { slug: url, data } = page
const { name, description } = data
---

<Default
  title={name}
  description={description}
  url={`/${url}`}
  class="flex min-h-screen flex-col items-center justify-center bg-black p-6 text-white"
>
  <Content />
  <Toasty client:visible />
</Default>
