---
import { getEntryBySlug } from 'astro:content'

import Default from '~/layouts/Default.astro'
import Toasty from '~/components/Toasty.svelte'

const page = await getEntryBySlug('page', '404')
const { Content } = await page.render()

const { slug: url, data } = page
const { name, description } = data
---

<Default
  title={name}
  description={description}
  url={`/${url}`}
  class="bg-black text-white flex flex-col items-center justify-center min-h-screen p-6"
>
  <Content />
  <Toasty client:visible image="/images/toasty.png" toasty="false" />
</Default>
