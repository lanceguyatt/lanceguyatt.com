---
import { SEO } from 'astro-seo'
import { getEntryBySlug } from 'astro:content'

import Default from '@/layouts/Default.astro'
import { Toasty as T } from '@/components/Toasty'

const page = await getEntryBySlug('page', '404')
const { Content } = await page.render()
const { slug: url, data } = page
const { name, description } = data
---

<Default
  title={name}
  description={description}
  url={`/${url}`}
  theme="dark"
  class="min-h-screen flex flex-col w-full items-center justify-center p-6"
>
  <SEO
    slot="head"
    extend={{ meta: [{ name: 'theme-color', content: '#000000' }] }}
  />
  <Content />
  <T client:load />
</Default>
