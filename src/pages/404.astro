---
import { SEO } from 'astro-seo'
import { getEntryBySlug } from 'astro:content'

import Default from '~/layouts/Default.astro'
import Toasty from '~/components/Toasty.svelte'

const page = await getEntryBySlug('page', '404')
const { Content } = await page.render()

const { slug: url, data } = page
const { name, description } = data
---

<Default
  title={name}
  description={description}
  url={`/${url}`}
  class="flex flex-col items-center justify-center min-h-screen bg-black p-6 text-white"
>
  <SEO
    slot="head"
    extend={{ meta: [{ name: 'theme-color', content: '#000000' }] }}
  />
  <Content />
  <Toasty client:visible />
</Default>
