---
export interface TitleBarProps {
  class?: string
  tag?: string
}

const {
  tag: Tag = 'header',
  class: className,
  ...attrs
} = Astro.props as TitleBarProps
---

<Tag class:list={['titlebar', className]} {...attrs}>
  <slot />
</Tag>

<style lang="postcss" is:global>
  .titlebar {
    @apply flex items-center relative h-[1.375rem] line-clamp-1 px-1 text-base text-ellipsis whitespace-nowrap;
  }
</style>
