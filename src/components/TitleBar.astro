---
interface Props {
  class?: string
  tag?: string
}

const { tag: Tag = 'header', class: className, ...attrs } = Astro.props as Props
---

<Tag class:list={['titlebar', className]} {...attrs}>
  <slot />
</Tag>

<style>
  .titlebar {
    @apply flex items-center relative h-[22px] line-clamp-1 px-1 text-base leading-5;
  }
</style>
