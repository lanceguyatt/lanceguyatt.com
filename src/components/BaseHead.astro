---
import { SEO } from 'astro-seo'
import { SITE } from '@config'

export interface Props {
  title?: string
  description?: string
  url?: string
  image?: {
    url?: string
    width?: string
    height?: string
  }
}

const {
  title = SITE.title,
  description = SITE.description,
  url = '',
  image = SITE.image,
} = Astro.props as Props

const openGraph = {
  basic: {
    title,
    description,
    type: 'WebPage',
    image,
    url,
  },
}
---

<SEO title={title} description={description} canonical={url} {openGraph} />
