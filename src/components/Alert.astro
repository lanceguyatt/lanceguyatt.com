---
interface Props {
  class?: string
  animate?: boolean
}

const { class: className, animate, ...attrs } = Astro.props as Props
---

<div
  role="dialog"
  class:list={['alert', className, { animate: 'animate-pulse' }]}
  {...attrs}
>
  <slot />
</div>

<style lang="postcss" is:global>
  .alert {
    @apply border-2 text-red p-4 text-center;
  }
</style>
