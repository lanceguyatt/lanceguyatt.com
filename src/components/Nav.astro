---
import { type HTMLAttributes } from 'astro/types'
import { cva, type VariantProps } from 'class-variance-authority'

const navVariants = cva(['flex', 'gap-3'], {
  variants: {
    vertical: {
      true: 'flex-col items-center w-24',
      false: 'flex-wrap'
    }
  },
  defaultVariants: {
    vertical: false
  }
})

export type NavProps = HTMLAttributes<'nav'> &
  VariantProps<typeof navVariants> & {
    name: string
    id: string
    class?: string
  }

const { class: className, name, id, vertical } = Astro.props as NavProps
---

<nav aria-labelledby={id} class={navVariants({ vertical, className })}>
  <h2 id={id} class="sr-only">{name}</h2>
  <slot />
</nav>
