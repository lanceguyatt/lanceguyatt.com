---
import type { HTMLAttributes } from 'astro/types'
import { cva, type VariantProps } from 'class-variance-authority'

const nav = cva(['flex', 'gap-3'], {
  variants: {
    vertical: {
      true: 'flex-col items-center w-24',
      false: 'flex-wrap'
    }
  },
  defaultVariants: {
    vertical: false
  }
})

interface Props extends HTMLAttributes<'nav'>, VariantProps<typeof nav> {
  name: string
  id: string
  class?: string
}

const { class: className, name, id, vertical } = Astro.props
---

<nav aria-labelledby={id} class={nav({ vertical, className })}>
  <h2 id={id} class="sr-only">{name}</h2>
  <slot />
</nav>
