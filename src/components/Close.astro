---
interface Props {
  name?: string
  url?: string
  class?: string
  tag?: string
}

const {
  tag = 'a',
  name,
  url = '/',
  class: className,
  ...props
} = Astro.props as Props

const Tag = tag
---

<Tag href={url ? url : false} data-component="close" {...props}>
  <span class="sr-only">{{ name }}</span>
</Tag>

<style lang="postcss" is:global>
  [data-component='close'] {
    @apply w-5 h-[1.375rem] block;
    background-image: url('data:image/svg+xml;base64,');

    &:active {
      background-position: -1.25rem 0;
    }
  }
</style>
