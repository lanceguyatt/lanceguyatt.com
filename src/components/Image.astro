---
import { cn } from '$lib/utils'

type ImageProps = {
  src: string
  alt: string
  loading?: 'lazy' | 'eager'
  class?: string
}

const {
  src,
  alt,
  class: className,
  loading = 'lazy',
  ...props
} = Astro.props as ImageProps
---

<img
  src={src}
  alt={alt}
  loading={loading}
  class:list={[cn('border-img-bar p-2px object-cover', className)]}
  {...props}
/>
