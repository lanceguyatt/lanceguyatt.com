---
interface Props {
  src: string
  alt: string
  loading?: 'lazy' | 'eager'
  class?: string
}

const { src, alt, class: className, loading = 'lazy', ...props } = Astro.props
---

<img
  src={src}
  alt={alt}
  loading={loading}
  class:list={['border-img-bar object-cover p-2px', className]}
  {...props}
/>
