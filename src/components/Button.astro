---
import { cva, type VariantProps } from 'class-variance-authority'

import { cn } from '$lib/utils'

const buttonVariants = cva(
  'button inline-flex items-center justify-center whitespace-nowrap',
  {
    variants: {
      intent: {
        default: 'text-primary-foreground active:bg-primary',
        destructive:
          'bg-destructive text-destructive-foreground hover:bg-destructive/90',
        outline:
          'border-2 border-input hover:bg-accent hover:text-accent-foreground',
        secondary:
          'bg-secondary text-secondary-foreground hover:bg-secondary/80',
        ghost: 'hover:bg-accent hover:text-accent-foreground',
        link: 'underline-offset-4 hover:underline text-primary'
      },
      width: {
        auto: '',
        full: 'w-full'
      },
      size: {
        default: 'h-6 px-2 text-base/tighter',
        sm: 'h-9 px-3 ',
        lg: 'h-11 px-8'
      }
    },
    defaultVariants: {
      intent: 'default',
      size: 'default',
      width: 'auto'
    }
  }
)

type Props = VariantProps<typeof buttonVariants> & {
  as: 'a' | 'button' | 'input'
}

const { as: Comp = 'a', class: className, intent, ...props } = Astro.props
---

<Comp
  type={Comp === 'button' && 'button'}
  data-component="button"
  class:list={[cn(buttonVariants({ intent }), className)]}
  {...props}
>
  <slot />
</Comp>
