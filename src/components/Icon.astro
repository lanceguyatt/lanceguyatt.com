---
import AstroIcon from 'astro-icon'

export interface IIcon {
  name: 'floppy-drive' | 'floppy-disk' | 'drive' | 'drawer' | 'disk' | 'file'
  class?: string
}

const { name, class: className } = Astro.props as IIcon
---

<AstroIcon name={name} class:list={className} />

<style lang="postcss">
  [astro-icon='floppy-drive'] {
    @apply h-[38px] w-[156px];
  }

  [astro-icon='floppy-disk'] {
    @apply h-[120px] w-[134px];
  }

  [astro-icon='drive'] {
    @apply w-[85px] h-[44px];
  }

  [astro-icon='drawer'] {
    @apply w-[65px] h-[38px];
  }

  [astro-icon='file'] {
    @apply w-[46px] h-[62px];
  }

  [astro-icon='disk'] {
    @apply w-[43px] h-[46px];
  }
</style>
