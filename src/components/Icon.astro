---
import type { HTMLAttributes } from 'astro/types'
import { cva, type VariantProps } from 'class-variance-authority'

export type IconProps = VariantProps<typeof icon>

export const icon = cva(['bg-cover'], {
  variants: {
    name: {
      disk: 'bg-disk w-[43px] h-[46px]',
      drawer: 'bg-drawer w-[65px] h-[38px]',
      drive: 'bg-drive w-[85px] h-[44px]',
      file: 'bg-file w-[46px] h-[62px]',
      'floppy-disk': 'bg-floppy-disk h-[120] w-[134px]',
      'floppy-drive': 'bg-floppy-drive h-[38px] w-[156px]'
    },
    active: {
      disk: 'bg-[43px]',
      drawer: 'bg-[-65px]',
      drive: 'bg-[-85px]',
      file: 'bg-[-46px]'
    }
  },
  defaultVariants: {
    name: 'drive',
    active: null
  }
})

export interface Props extends HTMLAttributes<'div'>, IconProps {
  className?: string
}

const { name, active, className } = Astro.props
---

<div class={icon({ name, active, className })}></div>
