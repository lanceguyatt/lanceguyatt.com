{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "types": ["svelte"],
    "baseUrl": ".",
    "paths": {
      "~*": ["./src/*"],
      "~/components/*": ["src/components/*"],
      "~/config": ["src/config"],
      "~/containers/*": ["src/containers/*"],
      "~/content/*": ["src/content/*"],
      "~/layouts/*": ["src/layouts/*"],
      "~/schema/*": ["src/schema/*"],
      "~/styles/*": ["src/styles/*"],
      "~/utils/*": ["src/utils/*"]
    }
  }
}
